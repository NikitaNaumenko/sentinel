<div class="flex justify-end gap-10 py-4">
  <div class="md:max-w-xl">
    <div class="flex-none">
      <.link navigate={~p"/monitors/new"}>
        <.button>
          <%= dgettext("monitors", "New monitor") %>
        </.button>
      </.link>
    </div>
  </div>
</div>

<div id="monitors" class="w-full flex flex-col">
  <.live_component
    :for={{id, monitor} <- @streams.monitors}
    module={MonitorComponent}
    id={id}
    monitor={monitor}
  />
</div>
